<div>
  <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <% if @user.errors.count == 2%>
            <h2><%= @user.errors.count %> errors prohibited this obj from being saved:</h2>
            <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>

          <% elsif @user.errors.count == 1%>
            <h2><%= @user.errors.count %> error prohibited this obj from being saved:</h2>
            <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          <% end %>
        </div>
      <% end %>
      
      <%= form_with model:@user do |f| %>
        <div class="form-group">
          <label for="user_name">Name</label>
          <%= f.text_field :name, class: "form-control book_title" %>
        </div>
        
        <div class="form-group">
          <label for="user_image">Image</label>
          <%= f.file_field :profile_image, accept: "image/*", class: "form-control-file user_image" %> 
        </div>
        
        <div class="form-group">
          <label for="user_introduciton">Introduction</label>
          <%= f.text_area :introduction, class: "form-control book_body" %>
        </div>

        <div class="form-group">
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        </div>
      <% end %>
      
      
      
      
    </div>
  </div>
</div>